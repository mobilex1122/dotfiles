{
  "icon_theme": "Warm Charmed Icons",
  "theme": "One Dark Pro",
  "disable_ai": true,
  "base_keymap": "VSCode",
  "ui_font_family": "FiraCode Nerd Font Mono",
  "buffer_font_family": "FiraCode Nerd Font Mono",
  "title_bar": {
    "show_user_picture": false,
    "show_sign_in": false
  },

  "collaboration_panel": {
    "dock": "left"
  },
  "project_panel": {
    "indent_guides": {
      "show": "always"
    },
    "default_width": 320,
    "indent_size": 15
  },
  "terminal": {
    "font_family": "FiraCode Nerd Font Mono",
    "line_height": "standard",
    "env": {
      "ISIDE": "1"
    },
    "shell": {
      "with_arguments": {
        "program": "pwsh",
        "args": ["-nologo"]
      }
    }
  }
}
